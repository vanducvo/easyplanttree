                switch (type) {
                    case "delete":
                        let message_d = "Bạn có chắc muốn xóa thiết bị khỏi hệ thống?";
                        let r = confirm(message_d);
                        if (r == true) {
                            let token = document.getElementById('_csrf').getAttribute('content');
                            let id = event.target.closest(".row").id;
